<Window x:Class="ImageServiceDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageServiceDesktopApp"
        mc:Ignorable="d"
        Title="Image Service Desktop Application" Height="350" Width="525" Icon="./Resources/Logo.png">
    <Grid>
        <Button>
            <Button.Style>
                <Style TargetType="Button">

                    <Setter Property="Background" Value="White" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding VM_IsConnected}"
                             Value="False">
                            <Setter Property="Background" Value="Gray" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <TabControl TabStripPlacement="Top" VerticalAlignment= "Stretch">
            <TabItem Header="Settings" Height="Auto">
                <local:SettingsUC/>
            </TabItem>
            <TabItem Header="Logs">
                <local:LogUC></local:LogUC>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
